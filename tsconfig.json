{
  "compilerOptions": {
    "target": "es6",                               
    "module": "commonjs",                           
    "outDir": "build",                                           
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,    
    "strictNullChecks": true,
    "declaration": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "types": [
      "node"
    ],
  },
  "include": [
    "./src/**/*",
  ],
  "exclude":[
    "node_modules"
  ]
}